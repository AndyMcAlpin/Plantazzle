<div class="container">
    <div class="columns is-justify-content-center is-align-items-center">
        <div class="column is-6-desktop is-10-tablet is-12-mobile is-justify-content-center is-flex is-flex-direction-column ml-4 p-0 card">
            <div class="column card-header has-background-danger-light has-shadow mb-4">
                <h1 class="has-text-centered is-size-3 has-text-primary">Please input your information below!</h1>
            </div>
            <body class="hero is-warning is-fullheight">
            <form class="box has-background-warning-light" class="field" class="login-form" id="LogIn">
                <div class="column">
                        {{> form/input
                            column="is-12"
                            id="user-name"
                            type="text"
                            label="Username"
                            placeholder="Example: PeauxBoi"
                            colorClass="is-primary"
                            isRequired=true
                        }}
                        {{> form/input
                            column="is-12"
                            id="psw"
                            type="text"
                            label="Password"
                            placeholder="Example: root"
                            colorClass="is-primary"
                            isRequired=true
                        }}
                        <div class="column is-12 p-1">
                            <div class="is-flex is-justify-content-space-between">
                                <button type="submit" class="button is-primary">Log in</button>
                            </div>
                        </div>

            </form>
            </body>
<script src="/javascript/login.js"></script>